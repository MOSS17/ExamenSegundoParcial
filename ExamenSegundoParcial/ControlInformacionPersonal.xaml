<UserControl x:Class="ExamenSegundoParcial.ControlInformacionPersonal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ExamenSegundoParcial"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock>Nombre:</TextBlock>
        <TextBox Name="txtNombre" />
        <TextBlock>Apellido paterno:</TextBlock>
        <TextBox Name="txtApellidoPaterno"/>
        <TextBlock>Apellido materno:</TextBlock>
        <TextBox Name="txtApellidoMaterno"/>
        <TextBlock>Edad:</TextBlock>
        <TextBox Name="txtEdad"/>
        <TextBlock Name="msjLlenarCamposInfoPersonal" Visibility="Collapsed">Es necesario llenar todos los campos</TextBlock>
    </StackPanel>
</UserControl>
