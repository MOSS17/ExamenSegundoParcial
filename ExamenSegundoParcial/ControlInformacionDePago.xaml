<UserControl x:Class="ExamenSegundoParcial.ControlInformacionDePago"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ExamenSegundoParcial"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock>Número de tajeta:</TextBlock>
        <TextBlock Name="msjNumTarjeta" Visibility="Collapsed">Es necesario que el número de tarjeta sean 16 digitos</TextBlock>
        <TextBox Name="txtNumeroTarjeta" />
        <TextBlock>CVV:</TextBlock>
        <TextBox Name="txtCVV"/>
        <TextBlock>Mes de expiración:</TextBlock>
        <TextBox Name="txtMesExpiracion"/>
        <TextBlock>Año de expiración:</TextBlock>
        <TextBox Name="txtAñoExpiracion"/>
    </StackPanel>
</UserControl>
